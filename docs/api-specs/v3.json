{
  "openapi": "3.0.1",
  "info": {
    "title": "DQT API",
    "version": "v3"
  },
  "paths": {
    "/v3/certificates/qts": {
      "get": {
        "tags": [
          "Certificates"
        ],
        "summary": "QTS Certificate",
        "description": "Returns a PDF of the QTS Certificate for the provided TRN holder",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "application/problem+json": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "429": {
            "description": "Too Many Requests",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/v3/certificates/npq/{qualificationId}": {
      "get": {
        "tags": [
          "Certificates"
        ],
        "summary": "NPQ Certificate",
        "description": "Returns a PDF of the NPQ Certificate associated with the provided Qualification ID",
        "parameters": [
          {
            "name": "qualificationId",
            "in": "path",
            "description": "The ID of the qualification record associated with the certificate",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              },
              "application/problem+json": {
                "schema": {
                  "type": "string",
                  "format": "binary"
                }
              }
            }
          },
          "429": {
            "description": "Too Many Requests",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/v3/teacher": {
      "get": {
        "tags": [
          "Teacher"
        ],
        "summary": "Teacher",
        "description": "Gets the details of the currently authenticated teacher",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetTeacherResponse"
                }
              }
            }
          },
          "429": {
            "description": "Too Many Requests",
            "content": {
              "application/problem+json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "GetTeacherResponse": {
        "type": "object",
        "properties": {
          "trn": {
            "type": "string"
          },
          "firstName": {
            "type": "string"
          },
          "lastName": {
            "type": "string"
          },
          "qtsDate": {
            "type": "string",
            "format": "date",
            "nullable": true
          },
          "qtsCertificateUrl": {
            "type": "string",
            "nullable": true
          },
          "initialTeacherTraining": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GetTeacherResponseInitialTeacherTraining"
            },
            "nullable": true
          },
          "npqQualifications": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GetTeacherResponseNpqQualificationsQualification"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "GetTeacherResponseInitialTeacherTraining": {
        "type": "object",
        "properties": {
          "qualification": {
            "$ref": "#/components/schemas/GetTeacherResponseInitialTeacherTrainingQualification"
          },
          "startDate": {
            "type": "string",
            "format": "date",
            "nullable": true
          },
          "endDate": {
            "type": "string",
            "format": "date",
            "nullable": true
          },
          "programmeType": {
            "$ref": "#/components/schemas/IttProgrammeType"
          },
          "result": {
            "$ref": "#/components/schemas/IttOutcome"
          },
          "ageRange": {
            "$ref": "#/components/schemas/GetTeacherResponseInitialTeacherTrainingAgeRange"
          },
          "provider": {
            "$ref": "#/components/schemas/GetTeacherResponseInitialTeacherTrainingProvider"
          },
          "subjects": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/GetTeacherResponseInitialTeacherTrainingSubject"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "GetTeacherResponseInitialTeacherTrainingAgeRange": {
        "type": "object",
        "properties": {
          "description": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "GetTeacherResponseInitialTeacherTrainingProvider": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          },
          "ukprn": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "GetTeacherResponseInitialTeacherTrainingQualification": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "GetTeacherResponseInitialTeacherTrainingSubject": {
        "type": "object",
        "properties": {
          "code": {
            "type": "string",
            "nullable": true
          },
          "name": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "GetTeacherResponseNpqQualificationsQualification": {
        "type": "object",
        "properties": {
          "awarded": {
            "type": "string",
            "format": "date"
          },
          "type": {
            "$ref": "#/components/schemas/GetTeacherResponseNpqQualificationsQualificationType"
          },
          "certificateUrl": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "GetTeacherResponseNpqQualificationsQualificationType": {
        "type": "object",
        "properties": {
          "code": {
            "$ref": "#/components/schemas/NpqQualificationType"
          },
          "name": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "IttOutcome": {
        "enum": [
          "Pass",
          "Fail",
          "Withdrawn",
          "Deferred",
          "DeferredForSkillsTests",
          "ApplicationReceived",
          "ApplicationUnsuccessful",
          "Approved",
          "Info",
          "InTraining",
          "NoResultSubmitted",
          "UnderAssessment"
        ],
        "type": "string"
      },
      "IttProgrammeType": {
        "enum": [
          "Core",
          "HEI",
          "SchoolDirectTrainingProgrammeSelfFunded",
          "SchoolDirectTrainingProgrammeSalaried",
          "SchoolDirectTrainingProgramme",
          "TeachFirstProgrammeCC",
          "TeachFirstProgramme",
          "OverseasTrainedTeacherProgramme",
          "RegisteredTeacherProgramme",
          "GraduateTeacherProgramme",
          "AssessmentOnlyRoute",
          "CoreFlexible",
          "LicensedTeacherProgramme",
          "UndergraduateOptIn",
          "EYITTAssessmentOnly",
          "EYITTGraduateEntry",
          "EYITTGraduateEmploymentBased",
          "EYITTUndergraduate",
          "EYITTSchoolDirectEarlyYears",
          "Apprenticeship",
          "FutureTeachingScholars",
          "ProviderLedPostgrad",
          "ProviderLedUndergrad",
          "InternationalQualifiedTeacherStatus"
        ],
        "type": "string"
      },
      "NpqQualificationType": {
        "enum": [
          "NPQEL",
          "NPQEYL",
          "NPQH",
          "NPQLBC",
          "NPQLL",
          "NPQLT",
          "NPQLTD",
          "NPQML",
          "NPQSL"
        ],
        "type": "string"
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "scheme": "Bearer"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}