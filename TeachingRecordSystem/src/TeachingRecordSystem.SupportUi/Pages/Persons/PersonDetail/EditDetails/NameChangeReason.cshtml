@page "/persons/{PersonId}/edit-details/name-change-reason"
@using TeachingRecordSystem.Core.Services.Persons
@model TeachingRecordSystem.SupportUi.Pages.Persons.PersonDetail.EditDetails.NameChangeReasonModel
@{
    Layout = "_Layout";
    ViewBag.Title = "Change name";
}

@section BeforeContent {
    <govuk-back-link data-testid="back-link" href="@Model.BackLink">Back</govuk-back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <form action=@LinkGenerator.Persons.PersonDetail.EditDetails.NameChangeReason(Model.PersonId, Model.JourneyInstance!.InstanceId, Model.FromCheckAnswers) method="post" data-testid="submit-form">
            <span class="govuk-caption-l" data-testid="edit-details-caption">Change name - @Model.PersonName</span>

            <govuk-radios for="Reason" data-testid="change-reason-options">
                <govuk-radios-fieldset>
                    <govuk-radios-fieldset-legend class="govuk-fieldset__legend--l" is-page-heading="true" data-testid="change-reason-options-legend">
                        Why are you changing the name on this record?
                    </govuk-radios-fieldset-legend>
                    <govuk-radios-item value="@PersonNameChangeReason.MarriageOrCivilPartnership">
                        @PersonNameChangeReason.MarriageOrCivilPartnership.GetDisplayName()
                    </govuk-radios-item>
                    <govuk-radios-item value="@PersonNameChangeReason.DeedPollOrOtherLegalProcess">
                        @PersonNameChangeReason.DeedPollOrOtherLegalProcess.GetDisplayName()
                    </govuk-radios-item>
                    <govuk-radios-item value="@PersonNameChangeReason.CorrectingAnError">
                        @PersonNameChangeReason.CorrectingAnError.GetDisplayName()
                    </govuk-radios-item>
                </govuk-radios-fieldset>
            </govuk-radios>

            @Html.EditorFor(m => m.Evidence)

            <div class="govuk-button-group">
                <govuk-button type="submit" data-testid="continue-button">Continue</govuk-button>
                <govuk-button data-testid="cancel-button" formaction="@LinkGenerator.Persons.PersonDetail.EditDetails.NameChangeReasonCancel(Model.PersonId, Model.JourneyInstance!.InstanceId)" class="govuk-button--secondary" type="submit">Cancel and return to record</govuk-button>
            </div>
        </form>
    </div>
</div>
