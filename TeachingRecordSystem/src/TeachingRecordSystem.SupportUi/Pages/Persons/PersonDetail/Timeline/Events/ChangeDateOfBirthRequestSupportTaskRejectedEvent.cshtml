@using TeachingRecordSystem.Core.Events
@using TeachingRecordSystem.Core.Events.Legacy
@using TeachingRecordSystem.Core.Services.Files
@using ChangeDateOfBirthRequestSupportTaskRejectedEvent = LegacyEvents.ChangeDateOfBirthRequestSupportTaskRejectedEvent;
@inject IFileService FileService
@model TimelineItem<TimelineEvent<TeachingRecordSystem.Core.Events.Legacy.ChangeDateOfBirthRequestSupportTaskRejectedEvent>>
@{
    var supportTaskEvent = Model.ItemModel.Event;
}
<div class="moj-timeline__item govuk-!-padding-bottom-2" data-testid="timeline-dob-request-rejected-event">
    <div class="moj-timeline__header">
        <h2 class="moj-timeline__title">Change request rejected</h2>
    </div>
    <p class="moj-timeline__date">
        <span data-testid="raised-by">By @Model.ItemModel.RaisedByUser.Name on</span>
        <time datetime="@Model.Timestamp.ToString("O")" data-testid="timeline-item-time">@Model.FormattedTimestamp</time>
    </p>
    <div class="moj-timeline__description">
        <div data-testid="details">
            <govuk-summary-list>
                <govuk-summary-list-row>
                    <govuk-summary-list-row-key>Request type</govuk-summary-list-row-key>
                    <govuk-summary-list-row-value>Date of birth change</govuk-summary-list-row-value>
                </govuk-summary-list-row>
                <govuk-summary-list-row>
                    <govuk-summary-list-row-key>Date of request</govuk-summary-list-row-key>
                    <govuk-summary-list-row-value use-empty-fallback>@supportTaskEvent.CreatedUtc.ToString(UiDefaults.DateOnlyDisplayFormat)</govuk-summary-list-row-value>
                </govuk-summary-list-row>

            </govuk-summary-list>
        </div>

        <govuk-details class="govuk-!-margin-bottom-2" data-testid="reason">
            <govuk-details-summary>Reason for rejection</govuk-details-summary>
            <govuk-details-text>
                <govuk-summary-list>
                    <govuk-summary-list-row>
                        <govuk-summary-list-row-key>Reason</govuk-summary-list-row-key>
                        <govuk-summary-list-row-value use-empty-fallback>@supportTaskEvent.RejectionReason</govuk-summary-list-row-value>
                    </govuk-summary-list-row>
                </govuk-summary-list>
            </govuk-details-text>
        </govuk-details>
    </div>
</div>

