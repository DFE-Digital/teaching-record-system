@page "/persons/{PersonId}/set-status/{TargetStatus}/change-reason"
@model TeachingRecordSystem.SupportUi.Pages.Persons.PersonDetail.SetStatus.ChangeReasonModel
@{
    Layout = "_Layout";
    ViewBag.Title = Model.TargetStatus == PersonStatus.Deactivated
        ? Html.DisplayNameFor(m => m.DeactivateReason)
        : Html.DisplayNameFor(m => m.ReactivateReason);
    var caption = Model.TargetStatus == PersonStatus.Deactivated
        ? $"Deactivate record - {Model.PersonName}"
        : $"Reactivate record - {Model.PersonName}";
}

@section BeforeContent {
    <govuk-back-link data-testid="back-link" href="@Model.BackLink">Back</govuk-back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        <form action=@LinkGenerator.PersonSetStatusChangeReason(Model.PersonId, Model.TargetStatus, Model.JourneyInstance!.InstanceId) method="post" enctype="multipart/form-data" data-testid="submit-form">
            <span class="govuk-caption-l" data-testid="set-status-caption">@caption</span>

            @if (Model.TargetStatus == PersonStatus.Deactivated)
            {
                <govuk-radios asp-for="DeactivateReason" data-testid="deactivate-reason-options">
                    <govuk-radios-fieldset>
                        <govuk-radios-fieldset-legend class="govuk-fieldset__legend--l" is-page-heading="true" data-testid="deactivate-reason-options-legend"/>
                        <govuk-radios-item value="@DeactivateReasonOption.RecordHolderDied">
                            @DeactivateReasonOption.RecordHolderDied.GetDisplayName()
                        </govuk-radios-item>
                        <govuk-radios-item value="@DeactivateReasonOption.ProblemWithTheRecord">
                            @DeactivateReasonOption.ProblemWithTheRecord.GetDisplayName()
                        </govuk-radios-item>
                        <govuk-radios-item value="@DeactivateReasonOption.AnotherReason">
                            @DeactivateReasonOption.AnotherReason.GetDisplayName()

                            <govuk-radios-item-conditional data-testid="deactivate-reason-detail">
                                <govuk-character-count asp-for="DeactivateReasonDetail" label-class="govuk-label--m" max-length="FileUploadDefaults.DetailMaxCharacterCount" rows="FileUploadDefaults.DetailTextAreaMinimumRows" />
                            </govuk-radios-item-conditional>
                        </govuk-radios-item>
                    </govuk-radios-fieldset>
                </govuk-radios>
            }
            else
            {
                <govuk-radios asp-for="ReactivateReason" data-testid="reactivate-reason-options">
                    <govuk-radios-fieldset>
                        <govuk-radios-fieldset-legend class="govuk-fieldset__legend--l" is-page-heading="true" data-testid="reactivate-reason-options-legend"/>
                        <govuk-radios-item value="@ReactivateReasonOption.DeactivatedByMistake">
                            @ReactivateReasonOption.DeactivatedByMistake.GetDisplayName()
                        </govuk-radios-item>
                        <govuk-radios-item value="@ReactivateReasonOption.AnotherReason">
                            @ReactivateReasonOption.AnotherReason.GetDisplayName()

                            <govuk-radios-item-conditional data-testid="reactivate-reason-detail">
                                <govuk-character-count asp-for="ReactivateReasonDetail" label-class="govuk-label--m" max-length="FileUploadDefaults.DetailMaxCharacterCount" rows="FileUploadDefaults.DetailTextAreaMinimumRows" />
                            </govuk-radios-item-conditional>
                        </govuk-radios-item>
                    </govuk-radios-fieldset>
                </govuk-radios>
            }

            <govuk-radios asp-for="UploadEvidence" data-testid="upload-evidence-options">
                <govuk-radios-fieldset>
                    <govuk-radios-fieldset-legend class="govuk-fieldset__legend--m" data-testid="upload-evidence-options-legend" />
                    <govuk-radios-item value="@true">
                        Yes
                        <govuk-radios-item-conditional>
                            @if (Model.EvidenceFileId is not null)
                            {
                                <span class="govuk-caption-m">Currently uploaded file</span>
                                <p class="govuk-body">
                                    <a href="@Model.UploadedEvidenceFileUrl" class="govuk-link" rel="noreferrer noopener" target="_blank" data-testid="uploaded-evidence-file-link">@($"{Model.EvidenceFileName} ({Model.EvidenceFileSizeDescription})")</a>
                                </p>
                                <input type="hidden" asp-for="EvidenceFileId" />
                                <input type="hidden" asp-for="EvidenceFileName" />
                                <input type="hidden" asp-for="EvidenceFileSizeDescription" />
                                <input type="hidden" asp-for="UploadedEvidenceFileUrl" />
                            }
                            <govuk-file-upload asp-for="EvidenceFile" 
                                               label-class="govuk-label--m"
                                               input-accept=".bmp, .csv, .doc, .docx, .eml, .jpeg, .jpg, .mbox, .msg, .ods, .odt, .pdf, .png, .tif, .txt, .xls, .xlsx">
                                <govuk-file-upload-label>Upload a file</govuk-file-upload-label>
                                <govuk-file-upload-hint>Must be smaller than 50MB</govuk-file-upload-hint>
                            </govuk-file-upload>
                        </govuk-radios-item-conditional>
                    </govuk-radios-item>
                    <govuk-radios-item value="@false">
                        No
                    </govuk-radios-item>
                </govuk-radios-fieldset>
            </govuk-radios>

            <div class="govuk-button-group">
                <govuk-button type="submit" data-testid="continue-button">Continue</govuk-button>
                <govuk-button type="submit" formaction="@LinkGenerator.PersonSetStatusCancel(Model.PersonId, Model.TargetStatus, Model.JourneyInstance!.InstanceId)" class="govuk-button--secondary" data-testid="cancel-button">Cancel and return to record</govuk-button>
            </div>
        </form>
    </div>
</div>
