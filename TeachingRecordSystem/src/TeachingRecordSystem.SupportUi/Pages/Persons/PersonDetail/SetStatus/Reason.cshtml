@page "/persons/{PersonId}/set-status/{TargetStatus}/reason"
@model TeachingRecordSystem.SupportUi.Pages.Persons.PersonDetail.SetStatus.ReasonModel
@{
    Layout = "_Layout";
    ViewBag.Title = Model.TargetStatus == PersonStatus.Deactivated
        ? Html.DisplayNameFor(m => m.DeactivateReason)
        : Html.DisplayNameFor(m => m.ReactivateReason);
    var caption = Model.TargetStatus == PersonStatus.Deactivated
        ? $"Deactivate record - {Model.PersonName}"
        : $"Reactivate record - {Model.PersonName}";
}

@section BeforeContent {
    <govuk-back-link data-testid="back-link" href="@Model.BackLink">Back</govuk-back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-!-width-two-thirds">
        <form action=@LinkGenerator.Persons.PersonDetail.SetStatus.Reason(Model.PersonId, Model.TargetStatus, Model.JourneyInstance!.InstanceId) method="post" enctype="multipart/form-data" data-testid="submit-form">
            <span class="govuk-caption-l" data-testid="set-status-caption">@caption</span>

            @if (Model.TargetStatus == PersonStatus.Deactivated)
            {
                <govuk-radios for="DeactivateReason" data-testid="deactivate-reason-options">
                    <govuk-radios-fieldset>
                        <govuk-radios-fieldset-legend class="govuk-fieldset__legend--l" is-page-heading="true" data-testid="deactivate-reason-options-legend">
                            Why are you deactivating this record?
                        </govuk-radios-fieldset-legend>
                        <govuk-radios-item value="@DeactivateReasonOption.RecordHolderDied">
                            @DeactivateReasonOption.RecordHolderDied.GetDisplayName()
                        </govuk-radios-item>
                        <govuk-radios-item value="@DeactivateReasonOption.ProblemWithTheRecord">
                            @DeactivateReasonOption.ProblemWithTheRecord.GetDisplayName()
                        </govuk-radios-item>
                        <govuk-radios-item value="@DeactivateReasonOption.AnotherReason">
                            @DeactivateReasonOption.AnotherReason.GetDisplayName()
                        </govuk-radios-item>
                    </govuk-radios-fieldset>
                </govuk-radios>

                <govuk-radios for="ProvideMoreInformation"  name="ProvideMoreInformation" data-testid="provide-more-information-options">
                    <govuk-radios-fieldset>
                        <govuk-radios-fieldset-legend class="govuk-fieldset__legend--l" is-page-heading="true" data-testid="provide-more-information-options-legend">
                            Do you want to provide more information?
                        </govuk-radios-fieldset-legend>
                        <govuk-radios-item value="@ProvideMoreInformationOption.Yes">
                            @ProvideMoreInformationOption.Yes.GetDisplayName()
                            <govuk-radios-item-conditional data-testid="deactivate-reason-detail">
                                <govuk-character-count for="DeactivateReasonDetail" max-length="UiDefaults.DetailMaxCharacterCount" rows="UiDefaults.DetailTextAreaRows">
                                    <govuk-character-count-label>Enter details</govuk-character-count-label>
                                </govuk-character-count>
                            </govuk-radios-item-conditional>
                        </govuk-radios-item>
                        <govuk-radios-item value="@ProvideMoreInformationOption.No">
                            @ProvideMoreInformationOption.No.GetDisplayName()
                        </govuk-radios-item>
                    </govuk-radios-fieldset>
                </govuk-radios>
            }
            else
            {
                <govuk-radios for="ReactivateReason" data-testid="reactivate-reason-options">
                    <govuk-radios-fieldset>
                        <govuk-radios-fieldset-legend class="govuk-fieldset__legend--l" is-page-heading="true" data-testid="reactivate-reason-options-legend">
                            Why are you reactivating this record?
                        </govuk-radios-fieldset-legend>
                        <govuk-radios-item value="@ReactivateReasonOption.DeactivatedByMistake">
                            @ReactivateReasonOption.DeactivatedByMistake.GetDisplayName()
                        </govuk-radios-item>
                        <govuk-radios-item value="@DeactivateReasonOption.AnotherReason">
                            @DeactivateReasonOption.AnotherReason.GetDisplayName()
                        </govuk-radios-item>
                    </govuk-radios-fieldset>
                </govuk-radios>

                <govuk-radios for="ProvideMoreInformation"  name="ProvideMoreInformation" data-testid="provide-more-information-options">
                    <govuk-radios-fieldset>
                        <govuk-radios-fieldset-legend class="govuk-fieldset__legend--l" is-page-heading="true" data-testid="provide-more-information-options-legend">
                            Do you want to provide more information?
                        </govuk-radios-fieldset-legend>
                        <govuk-radios-item value="@ProvideMoreInformationOption.Yes">
                            @ProvideMoreInformationOption.Yes.GetDisplayName()
                            <govuk-radios-item-conditional data-testid="reactivate-reason-detail">
                                <govuk-character-count for="ReactivateReasonDetail" max-length="UiDefaults.DetailMaxCharacterCount" rows="UiDefaults.DetailTextAreaRows">
                                    <govuk-character-count-label>Enter details</govuk-character-count-label>
                                </govuk-character-count>
                            </govuk-radios-item-conditional>
                        </govuk-radios-item>
                        <govuk-radios-item value="@ProvideMoreInformationOption.No">
                            @ProvideMoreInformationOption.No.GetDisplayName()
                        </govuk-radios-item>
                    </govuk-radios-fieldset>
                </govuk-radios>
            }

            @Html.EditorFor(m => m.Evidence)

            <div class="govuk-button-group">
                <govuk-button type="submit" data-testid="continue-button">Continue</govuk-button>
                <govuk-button type="submit" formaction="@LinkGenerator.Persons.PersonDetail.SetStatus.ReasonCancel(Model.PersonId, Model.TargetStatus, Model.JourneyInstance!.InstanceId)" class="govuk-button--secondary" data-testid="cancel-button">Cancel and return to record</govuk-button>
            </div>
        </form>
    </div>
</div>
