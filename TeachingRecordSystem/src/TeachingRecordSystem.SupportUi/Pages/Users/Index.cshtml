@page "/users"
@model TeachingRecordSystem.SupportUi.Pages.Users.IndexModel
@{
    ViewBag.Title = "Users";
}

<p class="govuk-body">
    <a href="@LinkGenerator.AddUser()" class="govuk-link">Add user</a>
</p>

<table class="govuk-table">
    <thead class="govuk-table__head">
    <tr class="govuk-table__row">
        <th scope="col" class="govuk-table__header">Name</th>
        <th scope="col" class="govuk-table__header">Email</th>
    </tr>
    </thead>
    <tbody class="govuk-table__body">
    @if (Model.AllUsers.Length > 0)
    {
        @foreach (var user in Model.AllUsers)
        {
            <tr class="govuk-table__row" data-testid="user-@user.UserId">
                <td class="govuk-table__cell">
                    <a href="@LinkGenerator.EditUser(user.UserId)" class="govuk-link">@user.Name</a>
                </td>
                <td class="govuk-table__cell empty-hyphens">@Html.ShyEmail(user.Email!)</td>
            </tr>
        }
    }
    </tbody>
</table>
