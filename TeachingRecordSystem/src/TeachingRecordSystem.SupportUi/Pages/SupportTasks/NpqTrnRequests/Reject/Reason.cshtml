@page "/support-tasks/npq-trn-requests/{supportTaskReference}/reject/reason/{handler?}"
@model TeachingRecordSystem.SupportUi.Pages.SupportTasks.NpqTrnRequests.Reject.ReasonModel
@{
    ViewBag.Title = Html.DisplayNameFor(m => m.RejectionReason);
}

@section BeforeContent {
    <govuk-back-link href="@(Model.FromCheckAnswers ?
        LinkGenerator2.SupportTasks.NpqTrnRequests.Reject.CheckAnswers(Model.SupportTaskReference, Model.JourneyInstance!.InstanceId) :
        LinkGenerator2.SupportTasks.NpqTrnRequests.Details(Model.SupportTaskReference))" />
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
        <form action="@LinkGenerator2.SupportTasks.NpqTrnRequests.Reject.Reason(Model.SupportTaskReference, Model.JourneyInstance!.InstanceId)" method="post">
            <span class="govuk-caption-l">TRN request - @Model.PersonName</span>
            <govuk-radios for="RejectionReason" data-testid="reason-options">
                <govuk-radios-fieldset>
                    <govuk-radios-fieldset-legend data-testid="reason-options-legend" class="govuk-fieldset__legend--l" is-page-heading="true" />
                    <govuk-radios-item value="@RejectionReasonOption.EvidenceDoesNotMatch">
                        @RejectionReasonOption.EvidenceDoesNotMatch.GetDisplayName()
                    </govuk-radios-item>
                    <govuk-radios-item value="@RejectionReasonOption.InsufficientEvidence">
                        @RejectionReasonOption.InsufficientEvidence.GetDisplayName()
                    </govuk-radios-item>
                    <govuk-radios-item value="@RejectionReasonOption.NpqDetailsDoNotMatch">
                        @RejectionReasonOption.NpqDetailsDoNotMatch.GetDisplayName()
                    </govuk-radios-item>
                    <govuk-radios-item value="@RejectionReasonOption.AnotherReason">
                        @RejectionReasonOption.AnotherReason.GetDisplayName()
                    </govuk-radios-item>
                </govuk-radios-fieldset>
            </govuk-radios>

            <div class="govuk-button-group">
                <govuk-button type="submit" data-testid="continue-button">Continue</govuk-button>
                <govuk-button data-testid="cancel-button" formaction="@LinkGenerator2.SupportTasks.NpqTrnRequests.Reject.ReasonCancel(Model.SupportTaskReference, Model.JourneyInstance!.InstanceId)" class="govuk-button--secondary" type="submit">Cancel and return to record</govuk-button>
            </div>
        </form>
    </div>
</div>
