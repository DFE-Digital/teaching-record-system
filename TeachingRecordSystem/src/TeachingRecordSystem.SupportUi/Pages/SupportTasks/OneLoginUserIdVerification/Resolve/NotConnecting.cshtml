@page "/support-tasks/one-login-user-id-verification/{supportTaskReference}/resolve/not-connecting"
@using TeachingRecordSystem.Core.Models.SupportTasks
@model TeachingRecordSystem.SupportUi.Pages.SupportTasks.OneLoginUserIdVerification.Resolve.NotConnecting
@{
    ViewBag.Title = "Why are you not connecting this GOV.UK One Login to a record?";
}

@section BeforeContent {
    <govuk-back-link href="@LinkGenerator.SupportTasks.OneLoginUserIdVerification.Resolve.Matches(Model.SupportTaskReference, Model.JourneyInstance.InstanceId)" />
}

<form method="post">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <span class="govuk-caption-l">Record management</span>
            <h1 class="govuk-heading-l">@ViewBag.Title</h1>

            <govuk-warning-text>
                There are multiple records that might match this GOV.UK One Login.
                Only continue if youâ€™re sure it should not be connected.
            </govuk-warning-text>

            <govuk-radios for="Reason">
                <govuk-radios-item value="@OneLoginIdVerificationNotConnectingReason.NoMatchingRecord">
                    @OneLoginIdVerificationNotConnectingReason.NoMatchingRecord.GetDisplayName()
                </govuk-radios-item>
                <govuk-radios-item value="@OneLoginIdVerificationNotConnectingReason.DetailsOnlyPartlyMatch">
                    @OneLoginIdVerificationNotConnectingReason.DetailsOnlyPartlyMatch.GetDisplayName()
                </govuk-radios-item>
                <govuk-radios-item value="@OneLoginIdVerificationNotConnectingReason.AnotherReason">
                    @OneLoginIdVerificationNotConnectingReason.AnotherReason.GetDisplayName()
                    <govuk-radios-item-conditional>
                        <govuk-radios-item-conditional>
                            <govuk-character-count for="AdditionalDetails" max-length="@UiDefaults.ReasonDetailsMaxCharacterCount">
                                <govuk-character-count-label>Enter details</govuk-character-count-label>
                            </govuk-character-count>
                        </govuk-radios-item-conditional>
                    </govuk-radios-item-conditional>
                </govuk-radios-item>
            </govuk-radios>

            <div class="govuk-button-group">
                <govuk-button type="submit">Continue</govuk-button>
                <govuk-button type="submit" name="Cancel" value="true" class="govuk-button--secondary">Cancel</govuk-button>
            </div>
        </div>
    </div>
</form>
