@page "/support-tasks/one-login-user-id-verification/"
@using TeachingRecordSystem.SupportUi.Services.SupportTasks
@model TeachingRecordSystem.SupportUi.Pages.SupportTasks.OneLoginUserIdVerification.Index

@{
    ViewBag.Title = "GOV.UK One Login - identity verification";
}

@section BeforeContent {
    <govuk-back-link href="@LinkGenerator.Index()" />
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">Record management</span>
        <h1 class="govuk-heading-l">@ViewBag.Title</h1>
    </div>
</div>

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full" data-testid="results">
        @if (Model.Results!.Count == 0)
        {
            @* This needs to say "Try searching again with different details" when search functionality is added" *@
            <p class="govuk-body-l govuk-!-font-weight-bold govuk-!-margin-top-2 govuk-!-margin-bottom-3" data-testid="no-tasks-message">
                No tasks
            </p>
        }
        else
        {
            <form action="@LinkGenerator.SupportTasks.OneLoginUserIdVerification.Index()" method="get" asp-antiforgery="false">
            </form>
            <table class="govuk-table">
                <thead class="govuk-table__head">
                    <tr class="govuk-table__row">
                        <th scope="col" class="govuk-table__header govuk-!-width-one-quarter"
                            sort-direction="@(Model.SortBy == OneLoginIdVerificationSupportTasksSortByOption.SupportTaskReference ? Model.SortDirection : null)"
                            link-template="@(direction => LinkGenerator.SupportTasks.OneLoginUserIdVerification.Index(OneLoginIdVerificationSupportTasksSortByOption.SupportTaskReference, direction))">
                            Task ID
                        </th>
                        <th scope="col" class="govuk-table__header govuk-!-width-one-quarter"
                            sort-direction="@(Model.SortBy == OneLoginIdVerificationSupportTasksSortByOption.Name ? Model.SortDirection : null)"
                            link-template="@(direction => LinkGenerator.SupportTasks.OneLoginUserIdVerification.Index(OneLoginIdVerificationSupportTasksSortByOption.Name, direction))">
                            Name
                        </th>
                        <th scope="col" class="govuk-table__header govuk-!-width-one-quarter"
                            sort-direction="@(Model.SortBy == OneLoginIdVerificationSupportTasksSortByOption.RequestedOn ? Model.SortDirection : null)"
                            link-template="@(direction => LinkGenerator.SupportTasks.OneLoginUserIdVerification.Index(OneLoginIdVerificationSupportTasksSortByOption.RequestedOn, direction))">
                            Requested on
                        </th>
                        <th scope="col" class="govuk-table__header"
                            sort-direction="@(Model.SortBy == OneLoginIdVerificationSupportTasksSortByOption.Email ? Model.SortDirection : null)"
                            link-template="@(direction => LinkGenerator.SupportTasks.OneLoginUserIdVerification.Index(OneLoginIdVerificationSupportTasksSortByOption.Email, direction))">
                            Email address
                        </th>
                    </tr>
                </thead>
                <tbody class="govuk-table__body">
                    @foreach (var result in Model.Results!)
                    {
                        <tr class="govuk-table__row" data-testid="task:@result.SupportTaskReference">
                            <th scope="row" class="govuk-table__header" data-testid="taskId">
                                <a href="@LinkGenerator.SupportTasks.OneLoginUserIdVerification.Resolve.Index(result.SupportTaskReference)" class="govuk-link">
                                    @result.SupportTaskReference
                                </a>
                            </th>
                            <td class="govuk-table__cell" data-testid="name">@result.Name</td>
                            <td class="govuk-table__cell" data-testid="requested-on">@result.CreatedOn.ToString(UiDefaults.DateOnlyDisplayFormat)</td>
                            <td class="govuk-table__cell" data-testid="email">@result.EmailAddress</td>
                        </tr>
                    }
                </tbody>
            </table>
            <partial name="_Pagination" model=@Model.Pagination />
        }
    </div>
</div>
