@using TeachingRecordSystem.SupportUi.Pages.Common
@model PersonStatusDetailViewModel

<govuk-summary-card>
    <govuk-summary-card-title>Professional status details</govuk-summary-card-title>
    <govuk-summary-list>
        @if (Model.QtsDate is not null)
        {
            <govuk-summary-list-row>
                <govuk-summary-list-row-key>QTS award date</govuk-summary-list-row-key>
                <govuk-summary-list-row-value use-empty-fallback>@Model.QtsDate?.ToString(UiDefaults.DateOnlyDisplayFormat)</govuk-summary-list-row-value>
            </govuk-summary-list-row>
        }
        @if(Model.InductionStatusInfo.Value != InductionStatus.None)
        {
            <govuk-summary-list-row>
                <govuk-summary-list-row-key>Induction status</govuk-summary-list-row-key>
                <govuk-summary-list-row-value use-empty-fallback>@Model.InductionStatusInfo.Title</govuk-summary-list-row-value>
            </govuk-summary-list-row>

        }
        @if (Model.EytsDate is not null)
        {
            <govuk-summary-list-row>
                <govuk-summary-list-row-key>EYTS award date</govuk-summary-list-row-key>
                <govuk-summary-list-row-value use-empty-fallback>@Model.EytsDate?.ToString(UiDefaults.DateOnlyDisplayFormat)</govuk-summary-list-row-value>
            </govuk-summary-list-row>
        }
        @if(Model.HasEyps)
        {
            <govuk-summary-list-row>
                <govuk-summary-list-row-key>EYPS</govuk-summary-list-row-key>
                <govuk-summary-list-row-value>Yes</govuk-summary-list-row-value>
            </govuk-summary-list-row>
        }
        @if (Model.PqtsDate is not null)
        {
            <govuk-summary-list-row>
                <govuk-summary-list-row-key>PQTS award date</govuk-summary-list-row-key>
                <govuk-summary-list-row-value use-empty-fallback>@Model.PqtsDate?.ToString(UiDefaults.DateOnlyDisplayFormat)</govuk-summary-list-row-value>
            </govuk-summary-list-row>
        }
    </govuk-summary-list>
</govuk-summary-card>
