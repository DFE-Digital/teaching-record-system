@model CheckboxFilterViewModel

<govuk-checkboxes id-prefix="trs-filters-@Model.Name" name=@Model.Name checkboxes-class="govuk-checkboxes govuk-checkboxes--small">
    <govuk-checkboxes-fieldset>
        <govuk-checkboxes-fieldset-legend is-page-heading=true class="govuk-fieldset__legend--s">
            @Model.DisplayName
        </govuk-checkboxes-fieldset-legend>

        @foreach (var value in Model.Values)
        {
            <govuk-checkboxes-item value=@value.Name checked=@value.Selected>
                @value.DisplayName (@value.Count)
            </govuk-checkboxes-item>
        }
    </govuk-checkboxes-fieldset>
</govuk-checkboxes>
