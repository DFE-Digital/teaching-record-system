@using TeachingRecordSystem.SupportUi.Pages.Common
@model PersonProfessionalStatusDetailViewModel

<govuk-summary-card>
    <govuk-summary-card-title data-testid="professional-status-details">Professional status details</govuk-summary-card-title>
    <govuk-summary-list>
        <govuk-summary-list-row>
            <govuk-summary-list-row-key>Qualified teacher status (QTS)</govuk-summary-list-row-key>
            <govuk-summary-list-row-value>@(Model.QtsDate != null ? "Holds" : "No")</govuk-summary-list-row-value>
        </govuk-summary-list-row>
        @if (Model.QtsDate is not null)
        {
            <govuk-summary-list-row>
                <govuk-summary-list-row-key>QTS held since</govuk-summary-list-row-key>
                <govuk-summary-list-row-value>@Model.QtsDate?.ToString(UiDefaults.DateOnlyDisplayFormat)</govuk-summary-list-row-value>
            </govuk-summary-list-row>
        }
        @if(Model.InductionStatusInfo.Value != InductionStatus.None)
        {
            <govuk-summary-list-row>
                <govuk-summary-list-row-key>Induction status</govuk-summary-list-row-key>
                <govuk-summary-list-row-value>@Model.InductionStatusInfo.Title</govuk-summary-list-row-value>
            </govuk-summary-list-row>
        }
        <govuk-summary-list-row>
            <govuk-summary-list-row-key>Early years teacher status (EYTS)</govuk-summary-list-row-key>
            <govuk-summary-list-row-value>@(Model.EytsDate != null ? "Holds" : "No")</govuk-summary-list-row-value>
        </govuk-summary-list-row>
        @if (Model.EytsDate is not null)
        {
            <govuk-summary-list-row>
                <govuk-summary-list-row-key>EYTS held since</govuk-summary-list-row-key>
                <govuk-summary-list-row-value>@Model.EytsDate?.ToString(UiDefaults.DateOnlyDisplayFormat)</govuk-summary-list-row-value>
            </govuk-summary-list-row>
        }
        <govuk-summary-list-row>
            <govuk-summary-list-row-key>Early years practitioner status (EYPS)</govuk-summary-list-row-key>
            <govuk-summary-list-row-value>@(Model.HasEyps ? "Holds" : "No")</govuk-summary-list-row-value>
        </govuk-summary-list-row>
        <govuk-summary-list-row>
            <govuk-summary-list-row-key>Partial qualified teacher status (PQTS)</govuk-summary-list-row-key>
            <govuk-summary-list-row-value>@(Model.PqtsDate != null ? "Holds" : "No")</govuk-summary-list-row-value>
        </govuk-summary-list-row>
        @if (Model.PqtsDate is not null)
        {
            <govuk-summary-list-row>
                <govuk-summary-list-row-key>PQTS held since</govuk-summary-list-row-key>
                <govuk-summary-list-row-value>@Model.PqtsDate?.ToString(UiDefaults.DateOnlyDisplayFormat)</govuk-summary-list-row-value>
            </govuk-summary-list-row>
        }
    </govuk-summary-list>
</govuk-summary-card>
