@page "/application-users/add"
@model TeachingRecordSystem.SupportUi.Pages.ApplicationUsers.AddApplicationUser.IndexModel
@{
    ViewBag.Title = "Add application user";
}

@section BeforeContent {
    <govuk-back-link href="@LinkGenerator.ApplicationUsers()" />
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form action="@LinkGenerator.AddApplicationUser()" method="post">
            <h1 class="govuk-heading-l">@ViewBag.Title</h1>

            <govuk-input for="Name" label-class="govuk-label--m" />

            <govuk-input for="ShortName" input-class="govuk-input--width-10" label-class="govuk-label--m" />

            <govuk-button type="submit">Save</govuk-button>
        </form>
    </div>
</div>
