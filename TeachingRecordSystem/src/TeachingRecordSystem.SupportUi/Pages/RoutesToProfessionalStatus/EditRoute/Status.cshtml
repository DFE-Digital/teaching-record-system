@page "/routes/{qualificationId}/edit/status/{handler?}"
@model TeachingRecordSystem.SupportUi.Pages.RoutesToProfessionalStatus.EditRoute.StatusModel
@{
    ViewBag.Title = "Select the route status";
}

@section BeforeContent {
    <govuk-back-link href="@(Model.BackLink)">Back</govuk-back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
        <form action="@LinkGenerator.RoutesToProfessionalStatus.EditRoute.Status(Model.QualificationId, Model.JourneyInstance!.InstanceId, fromCheckAnswers: Model.FromCheckAnswers)" method="post">
            <span class="govuk-caption-l">Edit route - @Model.PersonName</span>
            <govuk-radios for=@Model.Status data-testid="status">
                <govuk-radios-fieldset>
                    <govuk-radios-fieldset-legend data-testid="status-legend" class="govuk-fieldset__legend--l" is-page-heading="true" >
                        @ViewBag.Title
                    </govuk-radios-fieldset-legend>
                    @foreach (var status in Model.Statuses)
                    {
                        <govuk-radios-item value="@status.Value">@status.Name</govuk-radios-item>
                    }
                </govuk-radios-fieldset>
            </govuk-radios>
            <div class="govuk-button-group">
                <govuk-button type="submit">Continue</govuk-button>
                <govuk-button data-testid="cancel-button" formaction="@LinkGenerator.RoutesToProfessionalStatus.EditRoute.StatusCancel(Model.QualificationId, Model.JourneyInstance!.InstanceId)" class="govuk-button--secondary" type="submit">Cancel and return to record</govuk-button>
            </div>
        </form>
    </div>
</div>
