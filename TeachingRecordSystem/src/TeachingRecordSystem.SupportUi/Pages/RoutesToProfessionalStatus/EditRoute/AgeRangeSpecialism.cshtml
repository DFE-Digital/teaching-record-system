@page "/route/{qualificationId}/edit/age-range/{handler?}"
@model TeachingRecordSystem.SupportUi.Pages.RoutesToProfessionalStatus.EditRoute.AgeRangeSpecialismModel
@{
    ViewBag.Title = "Edit age range specialism";
}
@section BeforeContent {
    <govuk-back-link href="@(Model.FromCheckAnswers == false ? LinkGenerator.RouteDetail(Model.QualificationId, Model.JourneyInstance!.InstanceId) :LinkGenerator.RouteCheckYourAnswers(Model.QualificationId, Model.JourneyInstance!.InstanceId))">Back</govuk-back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
        <form action="@LinkGenerator.RouteEditAgeRangeSpecialism(Model.QualificationId, Model.JourneyInstance!.InstanceId, Model.FromCheckAnswers)" method="post">
            <span class="govuk-caption-l">Routes and professional status - @Model.PersonName</span>
            <govuk-radios asp-for="@Model.TrainingAgeSpecialism.AgeRangeType">
                <govuk-radios-fieldset>
                    <govuk-radios-fieldset-legend />
                    <govuk-radios-item value="@TrainingAgeSpecialismType.FoundationStage">@TrainingAgeSpecialismType.FoundationStage.GetDisplayName()</govuk-radios-item>
                    <govuk-radios-item value="@TrainingAgeSpecialismType.KeyStage1">@TrainingAgeSpecialismType.KeyStage1.GetDisplayName()</govuk-radios-item>
                    <govuk-radios-item value="@TrainingAgeSpecialismType.KeyStage2">@TrainingAgeSpecialismType.KeyStage2.GetDisplayName()</govuk-radios-item>
                    <govuk-radios-item value="@TrainingAgeSpecialismType.KeyStage3">@TrainingAgeSpecialismType.KeyStage3.GetDisplayName()</govuk-radios-item>
                    <govuk-radios-item value="@TrainingAgeSpecialismType.KeyStage4">@TrainingAgeSpecialismType.KeyStage4.GetDisplayName()</govuk-radios-item>
                    <govuk-radios-item value="@TrainingAgeSpecialismType.FurtherEducation">@TrainingAgeSpecialismType.FurtherEducation.GetDisplayName()</govuk-radios-item>
                    <govuk-radios-divider>or</govuk-radios-divider>
                    <govuk-radios-item value="@TrainingAgeSpecialismType.None">I want to provide an age range
                        <govuk-radios-item-conditional>
                        <govuk-input asp-for="TrainingAgeSpecialism.AgeRangeFrom">
                                <govuk-input-label>From</govuk-input-label>
                            </govuk-input>
                            <govuk-input asp-for="TrainingAgeSpecialism.AgeRangeTo">
                                <govuk-input-label>To</govuk-input-label>
                            </govuk-input>
                        </govuk-radios-item-conditional>
                    </govuk-radios-item>
                </govuk-radios-fieldset>
            </govuk-radios>
            <div class="govuk-button-group">
                <govuk-button type="submit">Continue</govuk-button>
                <govuk-button data-testid="cancel-button" formaction="@LinkGenerator.RouteEditEndDateCancel(Model.QualificationId, Model.JourneyInstance!.InstanceId)" class="govuk-button--secondary" type="submit">Cancel and return to record</govuk-button>
            </div>
        </form>
    </div>
</div>
