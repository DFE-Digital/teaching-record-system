@page "/route/add/start-and-end-date/{handler?}"

@model TeachingRecordSystem.SupportUi.Pages.RoutesToProfessionalStatus.AddRoute.StartAndEndDateModel
@{
    ViewBag.Title = StartAndEndDateModel.PageHeading;
}

@section BeforeContent {
    <govuk-back-link href=@(Model.BackLink)>Back</govuk-back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
        <form action="@LinkGenerator.RouteAddStartAndEndDate(Model.PersonId, Model.JourneyInstance!.InstanceId, Model.FromCheckAnswers)" method="post">
            <span class="govuk-caption-l">Routes and professional status - @Model.PersonName</span>
            <govuk-fieldset>
                <govuk-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">
                    @ViewBag.Title
                    @if (!Model.StartAndEndDatesRequired) {
                        <text>(optional)</text>
                    }
                </govuk-fieldset-legend>
                <govuk-date-input asp-for="TrainingStartDate">
                    <govuk-date-input-fieldset>
                        <govuk-date-input-fieldset-legend class="govuk-fieldset__legend--m" />
                        <govuk-date-input-hint>For example, 27 3 2023</govuk-date-input-hint>
                    </govuk-date-input-fieldset>
                </govuk-date-input>

                <govuk-date-input asp-for="TrainingEndDate">
                    <govuk-date-input-fieldset>
                        <govuk-date-input-fieldset-legend class="govuk-fieldset__legend--m" />
                        <govuk-date-input-hint>For example, 27 3 2024</govuk-date-input-hint>
                    </govuk-date-input-fieldset>
                </govuk-date-input>
            </govuk-fieldset>

            <div class="govuk-button-group">
                <govuk-button type="submit">Continue</govuk-button>
                <govuk-button data-testid="cancel-button" formaction="@LinkGenerator.RouteAddStartAndEndDateCancel(Model.PersonId, Model.JourneyInstance!.InstanceId)" class="govuk-button--secondary" type="submit">Cancel and return to record</govuk-button>
            </div>
        </form>
    </div>
</div>


