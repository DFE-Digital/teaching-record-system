@page "/routes/add/start-and-end-date/{handler?}"

@model TeachingRecordSystem.SupportUi.Pages.RoutesToProfessionalStatus.AddRoute.StartAndEndDateModel
@{
    ViewBag.Title = "Enter the route start and end dates"
       + (Model.StartAndEndDatesRequired ? "" : " (optional)");
}

@section BeforeContent {
    <govuk-back-link href=@(Model.BackLink)>Back</govuk-back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
        <form action="@LinkGenerator.RoutesToProfessionalStatus.AddRoute.StartAndEndDate(Model.PersonId, Model.JourneyInstance!.InstanceId, Model.FromCheckAnswers)" method="post">
            <span class="govuk-caption-l">@Model.PageCaption</span>
            <govuk-fieldset>
                <govuk-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l">
                    @ViewBag.Title
                </govuk-fieldset-legend>
                <govuk-date-input for="TrainingStartDate">
                    <govuk-date-input-fieldset>
                        <govuk-date-input-fieldset-legend class="govuk-fieldset__legend--m">
                            Route start date
                        </govuk-date-input-fieldset-legend>
                        <govuk-date-input-hint>For example, 27 3 2023</govuk-date-input-hint>
                    </govuk-date-input-fieldset>
                </govuk-date-input>

                <govuk-date-input for="TrainingEndDate">
                    <govuk-date-input-fieldset>
                        <govuk-date-input-fieldset-legend class="govuk-fieldset__legend--m">
                            Route end date
                        </govuk-date-input-fieldset-legend>
                        <govuk-date-input-hint>For example, 27 3 2024</govuk-date-input-hint>
                    </govuk-date-input-fieldset>
                </govuk-date-input>
            </govuk-fieldset>

            <div class="govuk-button-group">
                <govuk-button type="submit">Continue</govuk-button>
                <govuk-button data-testid="cancel-button" formaction="@LinkGenerator.RoutesToProfessionalStatus.AddRoute.StartAndEndDateCancel(Model.PersonId, Model.JourneyInstance!.InstanceId)" class="govuk-button--secondary" type="submit">Cancel and return to record</govuk-button>
            </div>
        </form>
    </div>
</div>


