@page "/routes/add/induction-exemption/{handler?}"
@model TeachingRecordSystem.SupportUi.Pages.RoutesToProfessionalStatus.AddRoute.InductionExemptionModel

@{
    ViewBag.Title = Model.PageTitle;
}

@section BeforeContent {
    <govuk-back-link href=@(Model.BackLink)>Back</govuk-back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
        <form action="@LinkGenerator2.RoutesToProfessionalStatus.AddRoute.InductionExemption(Model.PersonId, Model.JourneyInstance!.InstanceId, Model.FromCheckAnswers)" method="post">
            <span class="govuk-caption-l">@Model.PageCaption</span>
            <govuk-radios for=@Model.IsExemptFromInduction data-testid="induction-exemption">
                <govuk-radios-fieldset>
                    <govuk-radios-fieldset-legend data-testid="induction-exemption-legend" class="govuk-fieldset__legend--l" is-page-heading="true" />
                    <govuk-radios-item value="@true">
                        Yes
                    </govuk-radios-item>
                    <govuk-radios-item value="@false">
                        No
                    </govuk-radios-item>
                </govuk-radios-fieldset>
            </govuk-radios>
            <div class="govuk-button-group">
                <govuk-button type="submit">Continue</govuk-button>
                <govuk-button data-testid="cancel-button" formaction="@LinkGenerator2.RoutesToProfessionalStatus.AddRoute.InductionExemptionCancel(Model.PersonId, Model.JourneyInstance!.InstanceId)" class="govuk-button--secondary" type="submit">Cancel and return to record</govuk-button>
            </div>
        </form>
    </div>
</div>
