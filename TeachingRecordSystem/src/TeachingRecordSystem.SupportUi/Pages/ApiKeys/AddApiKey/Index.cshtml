@page "/api-keys/add"
@model TeachingRecordSystem.SupportUi.Pages.ApiKeys.AddApiKey.IndexModel
@{
    ViewBag.Title = $"Add API key to {Model.ApplicationUserName}";
}

@section BeforeContent {
    <govuk-back-link href="@LinkGenerator.ApplicationUsers.EditApplicationUser.Index(Model.ApplicationUserId)" />
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <form action="@LinkGenerator.ApiKeys.AddApiKey.Index(Model.ApplicationUserId)" method="post">
            <h1 class="govuk-heading-l">@ViewBag.Title</h1>

            <govuk-input for="Key" input-class="govuk-input--width-20 trs-monospace" label-class="govuk-label--m" />

            <govuk-button type="submit">Save</govuk-button>
        </form>
    </div>
</div>
