@page "/alerts/add/start-date/{handler?}"
@model TeachingRecordSystem.SupportUi.Pages.Alerts.AddAlert.StartDateModel
@{
    ViewBag.Title = Html.DisplayNameFor(m => m.StartDate);
}

@section BeforeContent {
    <govuk-back-link href="@(Model.FromCheckAnswers == true ? LinkGenerator2.Alerts.AddAlert.CheckAnswers(Model.PersonId, Model.JourneyInstance!.InstanceId) : LinkGenerator2.Alerts.AddAlert.StartDate(Model.PersonId, Model.JourneyInstance!.InstanceId))">Back</govuk-back-link>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
        <form action="@LinkGenerator2.Alerts.AddAlert.StartDate(Model.PersonId, Model.JourneyInstance!.InstanceId, Model.FromCheckAnswers)" method="post">
            <span class="govuk-caption-l">Add an alert - @Model.PersonName</span>

            <govuk-date-input for="StartDate">
                <govuk-date-input-fieldset>
                    <govuk-date-input-fieldset-legend is-page-heading="true" class="govuk-fieldset__legend--l" />
                    <govuk-date-input-hint>For example, 27 3 2023</govuk-date-input-hint>
                </govuk-date-input-fieldset>
            </govuk-date-input>

            <div class="govuk-button-group">
                <govuk-button type="submit">Continue</govuk-button>
                <govuk-button formaction="@LinkGenerator2.Alerts.AddAlert.StartDateCancel(Model.PersonId, Model.JourneyInstance!.InstanceId)" class="govuk-button--secondary" type="submit">Cancel and return to record</govuk-button>
            </div>
        </form>
    </div>
</div>
